<div class='tab-pane' id="search-tab">
  <form>
    <div class="search-panels">
      <div class="search-panel">
        <div class="header-col">
          <select class="search-root-items"></select>
        </div>
        <div class="panel left-panel search-left-panel">
          <input type="text" class="form-control" value="Search params">
        </div>
      </div>

      <div class="search-list-panel">
        <div class="header-col clearfix">
          <div class="form-inline">
            <div class="input-group">
              {{input 'searchText' class="form-control" placeholder="Search..."}}
              <span class="input-group-btn">
                <input type="submit" class="btn btn-default btn-search " value="Search">
              </span>
            </div>
            <ul class="breadcrumb breadcrumb-search"></ul>
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-link btn-preview">Preview <i class="fa fa-toggle-on"></i></button>
            </div>
          </div>
        </div>
        <div class="panel right-panel">
          <div class="search-list"></div>
        </div>
      </div>

      <div class="preview-panel">
        <div class="panel">
          <div class="preview"></div>
        </div>
      </div>
    </div>
  </form>
</div>
