
  <table class="items-table">
    <thead>
      {{#if collection.length }}
        <tr>
          {{#each columns.models}}
            <th {{#unless visible}}class="hidden"{{/unless}} data-name="{{column_id}}">{{name}}</th>
          {{/each}}
        </tr>
      {{/if}}
      <tr class="list-root"></tr>
    </thead>

    <tbody class="children"></tbody>

  </table>

  {{paginate 'listview_collection'}}
  {{pages_selector 'listview_collection'}}

  <ul class="dropdown-menu" aria-labelledby="drop">
    {{#each columns.models}}
      <li>
        <input name="{{column_id}}" id="{{uid true}}" type="checkbox" class="column-check" autocomplete="off" {{#if visible}}checked{{/if}}>
        <label for="{{uid false}}">{{name}}</label>
      </li>
    {{/each}}
  </ul>


